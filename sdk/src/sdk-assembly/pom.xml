<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
      <groupId>int.esa.nmf</groupId>
      <artifactId>parent</artifactId>
      <version>1.2.0-SNAPSHOT</version>
      <relativePath />
    </parent>

    <groupId>int.esa.nmf.sdk</groupId>
    <artifactId>distribution-assembly</artifactId>
    <packaging>jar</packaging>

    <name>ESA NMF SDK Distribution Assembly</name>
    <description>Builds SDK distribution.</description>
    <url>http://www.esa.int</url>

    <organization>
      <name>ESA</name>
      <url>http://www.esa.int</url>
    </organization>

    <licenses>
      <license>
        <name>The European Space Agency Public License, Version 2.0</name>
        <url>https://raw.github.com/esa/CCSDS_APPS/master/LICENCE.md</url>
        <distribution>repo</distribution>
      </license>
    </licenses>

    <scm>
      <connection>scm:git:git@github.com:esa/NMF_SDK.git</connection>
      <developerConnection>scm:git:git@github.com:esa/NMF_SDK.git</developerConnection>
      <url>https://github.com/esa/NMF_SDK</url>
    </scm>

    <issueManagement>
      <system>GitHub</system>
      <url>https://github.com/esa/NMF_SDK/issues</url>
    </issueManagement>

    <developers>
      <developer>
        <id>dmarszk</id>
        <name>Dominik Marszk</name>
        <url>https://github.com/dmarszk</url>
      </developer>
    </developers>

    <properties>
      <esa.nmf.sdk.generator.baseoutputdir>${basedir}/../../nmf-sdk-${esa.nmf.version}</esa.nmf.sdk.generator.baseoutputdir>
    </properties>

    <dependencies>
      <!-- NOTE: Imprecise version resolution using ${esa.nmf.version-qualifier} cannot be used here,
      as maven-dependency-plugin:copy does not support it. -->
      <dependency>
        <groupId>int.esa.nmf.sdk</groupId>
        <artifactId>consumer-test-tool</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>int.esa.nmf.sdk</groupId>
        <artifactId>package-assembler</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>int.esa.nmf.sdk.examples.space</groupId>
        <artifactId>all-mc-services</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>int.esa.nmf.sdk.examples.space</groupId>
        <artifactId>camera</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>int.esa.nmf.sdk.examples.space</groupId>
        <artifactId>publish-clock</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>int.esa.nmf.sdk</groupId>
        <artifactId>mission-simulator-nmf-lib</artifactId>
        <version>${project.version}</version>
      </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <id>copy-sdk-artifacts</id>
                        <phase>install</phase>
                        <goals>
                          <goal>copy</goal>
                        </goals>
                        <configuration>
                          <artifactItems>
                            <!-- Stand-alone app -->
                            <artifactItem>
                              <groupId>int.esa.nmf.sdk</groupId>
                              <artifactId>consumer-test-tool</artifactId>
                              <classifier>jar-with-dependencies</classifier>
                              <outputDirectory>${esa.nmf.sdk.generator.baseoutputdir}/bin/consumer-test-tool</outputDirectory>
                            </artifactItem>
                            <!-- Stand-alone app -->
                            <artifactItem>
                              <groupId>int.esa.nmf.sdk</groupId>
                              <artifactId>package-assembler</artifactId>
                              <classifier>jar-with-dependencies</classifier>
                              <outputDirectory>${esa.nmf.sdk.generator.baseoutputdir}/bin/</outputDirectory>
                            </artifactItem>
                            <!-- Assembled library provided to JVM to run all of the apps.
                            Also includes Nanosat MO Supervisor Application. -->
                            <artifactItem>
                              <groupId>int.esa.nmf.sdk</groupId>
                              <artifactId>mission-simulator-nmf-lib</artifactId>
                              <classifier>jar-with-dependencies</classifier>
                              <outputDirectory>${esa.nmf.sdk.generator.baseoutputdir}/bin/examples/libs</outputDirectory>
                            </artifactItem>
                            <artifactItem>
                              <groupId>int.esa.nmf.sdk.examples.space</groupId>
                              <artifactId>all-mc-services</artifactId>
                              <outputDirectory>${esa.nmf.sdk.generator.baseoutputdir}/bin/examples/apps/all-mc-services</outputDirectory>
                            </artifactItem>
                            <artifactItem>
                              <groupId>int.esa.nmf.sdk.examples.space</groupId>
                              <artifactId>camera</artifactId>
                              <outputDirectory>${esa.nmf.sdk.generator.baseoutputdir}/bin/examples/apps/camera</outputDirectory>
                            </artifactItem>
                            <artifactItem>
                              <groupId>int.esa.nmf.sdk.examples.space</groupId>
                              <artifactId>publish-clock</artifactId>
                              <outputDirectory>${esa.nmf.sdk.generator.baseoutputdir}/bin/examples/apps/publish-clock</outputDirectory>
                            </artifactItem>
                          </artifactItems>
                          <outputDirectory>${esa.nmf.sdk.generator.baseoutputdir}</outputDirectory>
                          <excludeTransitive>true</excludeTransitive>
                          <stripVersion>true</stripVersion>
                          <stripClassifier>true</stripClassifier>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-sdk-resources</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                          <outputDirectory>${esa.nmf.sdk.generator.baseoutputdir}</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/src/mainDirectory</directory>
                                    <filtering>true</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
